%head
  = stylesheet_link_tag '../ext/resources/css/ext-all.css'
  = stylesheet_link_tag 'RowEditor.css'
  /= stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
  /= stylesheet_link_tag 'compiled/partials/_base.css'
  /= stylesheet_link_tag 'compiled/print.css', :media => 'print'
  /[if lt IE 8]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  
  :javascript
    window._token = "#{form_authenticity_token}"

  = javascript_include_tag :defaults  
  = javascript_include_tag '../ext/adapter/prototype/ext-prototype-adapter-debug.js'
  = javascript_include_tag '../ext/ext-all-debug.js'
  = javascript_include_tag 'extjs/App.js'
  
  :javascript
    Ext.BLANK_IMAGE_URL = '../ext/resources/images/default/s.gif';
    
  = yield :jsinclude
  
  %meta{:"http-equiv" => "content-type", :content => "text/html;charset=UTF-8"}
  %title Assignments: #{controller.action_name}
    
%body.blueprint#index
  .container
    .header#header
    = render :partial => 'layouts/header'
    .menu#menu= render :partial => 'layouts/menu'
    .content#content= yield
    .footer#footer= render :partial => 'layouts/footer'