%h2 Listing Projects
%table
  %tr
    %th Name
    %th Actions
    
  - @projects.each do |project|
    %tr
      %td= project.name
      %td
        = link_to 'Show', project
        = link_to 'Edit', edit_project_path(project)
        = link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete
%br
=link_to 'New Project', new_project_path